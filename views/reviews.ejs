<%- include('header'); -%>

<div class="offcanvas-overlay"></div>

<!-- Breadcrumb Area Start -->
<div class="breadcrumb-area">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="breadcrumb-content">
          <ul class="nav">
            <li><a href="index.html">Home</a></li>
            <li>Contact Us</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Breadcrumb Area End-->
<!-- contact area start -->
<div
  class="popular-categories-area popular-categories-area-2 bg-light-gray pt-50px pb-50px"
>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="section-title">
          <h2 class="section-heading">Reviews</h2>
        </div>
      </div>
    </div>

    <div class="row mb-4">
      <% reviews.map(review =>{ %>
        <div class="col-lg-4 col-md-4 mb-4 mb-md-4">
          <div class="card">
            <div class="card-body py-4 mt-2">
              <div class="d-flex justify-content-center mb-4">
                <img
                  src="/images/profile.png"
                  class="rounded-circle shadow-1-strong"
                  width="100"
                  height="100"
                />
              </div>
              <h5 class="font-weight-bold mb-2"><%= review.name %> </h5>
  
              <p class="mb-2">
                <i class="fas fa-quote-left pe-2"></i><%= review.desc %> 
              </p>
            </div>
          </div>
        </div>
      <%}) %> 
      
      
    </div>
  </div>
</div>
<!-- contact area end -->
<div id="feedback" class="brand-area mt-30px mb-50px">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="section-title">
          <h2 class="section-heading">Feedback Form</h2>
        </div>
      </div>
    </div>
    <form action="/add-review" method="POST" enctype="application/x-www-form-urlencoded" class="container2">
      <h1 class="heading">Give feedback</h1>
      <p class="para">
        What do you think of the issue search experience within the project?
      </p>

      <div class="feedback-msg">
        <p class="para">Name</p>

        <input type="text" class="para name" name="name"></input>
        <br>
        <p class="para">Email</p>

        <input type="email" class="para email" name="email"></input>

        <p class="para">What are the main reasons for your rating?</p>
        <textarea name="desc" class="desc" id=""></textarea>
      </div>

      <div class="buttons">
        <button id="btn" type="submit" href="javascript:alert('Thanks for submiting your feedback')"
          >Submit</button
        >
      </div>
    </form>
  </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.1/jquery.min.js" integrity="sha512-aVKKRRi/Q/YV+4mjoKBsE4x3H+BkegoM/em46NNlCqNTmUYADjBbeNefNxYV7giUp0VxICtqdrbqU7iVaeZNXA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script>
  $("#btn").click(()=>{
    if($(".name").val().length<1){
      alert("Please enter name")
      return false;
    }
    if($(".email").val().length<1){
      alert("Please enter email")
      return false;
    }
    if($(".desc").val().length<1){
      alert("Please give a review")
      return false;
    }
  })

</script>

<%- include('footer'); -%>
